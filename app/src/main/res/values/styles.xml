<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckBoxColor" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#fff</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">#fff</item> <!-- for check state -->
    </style>

    <style name="Principal" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>                        //Color botones
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">#F2F2F2</item>        //Color texto botones
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>                    //Color de la barra de estatus

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryLightColor</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorError</item>

        <item name="colorSurface">@color/primaryLightColor</item>
        <item name="colorOnSurface">@color/primaryDarkColor</item>

        <item name="android:colorBackground">#F2F2F2</item>
        <item name="colorOnBackground">#73665F</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">#F2F2F2</item>
        <item name="colorControlActivated">@color/secondaryColor</item>

    </style>

</resources>
